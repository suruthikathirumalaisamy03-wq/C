#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
    int a,b,isum,idif;
    float c,d,fsum,fdif;
    scanf("%d %d",&a,&b);
    scanf("%f %f",&c,&d);
    isum=a+b;
    idif=a-b;
    fsum=c+d;
    fdif=c-d;
    printf("%d %d\n",isum,idif);
    printf("%.1f %.1f",fsum,fdif);
    return 0;   
}
